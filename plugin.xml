<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-mlkit-barcode-scanner"
        version="3.0.7-codescanner"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>cordova-plugin-mlkit-barcode-scanner</name>

  <!-- JS surface stays the same -->
  <js-module name="cordova-plugin-ml-kit-barcode-scanner" src="www/BarcodeScanner.plugin.js">
    <clobbers target="cordova.plugins.mlkit.barcodeScanner" />
  </js-module>

  <engines>
    <engine name="cordova" version=">=7.1.0" />
    <engine name="cordova-android" version=">=8.0.0" />
    <engine name="cordova-ios" version=">=4.5.0" />
  </engines>

  <!-- iOS (unchanged) -->
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="cordova-plugin-mlkit-barcode-scanner">
        <param name="ios-package" value="CDViOSScanner" />
      </feature>
    </config-file>

    <config-file target="*-Info.plist" parent="CFBundleDevelopmentRegion">
      <string>de_DE</string>
    </config-file>
    <config-file target="*-Info.plist" parent="CFBundleLocalizations">
      <array>
        <string>en</string>
        <string>de</string>
      </array>
    </config-file>

    <framework src="Foundation.framework" />
    <framework src="AVFoundation.framework" />
    <framework src="UIKit.framework" />
    <podspec>
      <config>
        <source url="https://cdn.cocoapods.org/" />
      </config>
      <pods use-frameworks="true">
        <pod name="GoogleMLKit/BarcodeScanning" spec="~> 2.5.0" />
      </pods>
    </podspec>

    <header-file src="src/ios/CDViOSScanner.h" />
    <source-file src="src/ios/CDViOSScanner.m" />
    <header-file src="src/ios/CameraViewController.h" />
    <source-file src="src/ios/CameraViewController.m" />
    <resource-file src="src/ios/Sounds/beep.caf" />
    <resource-file src="src/ios/de.lproj/Localizable.strings" target="de.lproj/Localizable.strings" />
    <resource-file src="src/ios/en.lproj/Localizable.strings" target="en.lproj/Localizable.strings" />
  </platform>

  <!-- ANDROID: switched to Google Code Scanner (GMS) -->
  <platform name="android">
    <!-- Ensure AndroidX bridging for older projects -->
    <dependency id="cordova-plugin-androidx-adapter" version="^1.1.3" />

    <!-- Expose the plugin to Cordova -->
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="cordova-plugin-mlkit-barcode-scanner">
        <param name="android-package"
               value="com.mobisys.cordova.plugins.mlkit.barcode.scanner.CodeScannerBarcodeScanner" />
      </feature>
    </config-file>

    <!-- No custom activity, no Mobile Vision metadata, and no CAMERA permission required by Code Scanner -->

    <!-- Java source (you provide this class) -->
    <source-file src="src/android/src/CodeScannerBarcodeScanner.java"
                 target-dir="src/com/mobisys/cordova/plugins/mlkit/barcode/scanner" />

    <!-- Minimal dependencies:
         - AppCompat for Theme.AppCompat.* if you use it anywhere
         - Google Code Scanner (loads native code via Google Play Services; no barhopper .so in APK) -->
    <framework src="androidx.appcompat:appcompat:1.7.0" />
    <framework src="com.google.android.gms:play-services-code-scanner:16.1.0" />
  </platform>
</plugin>
