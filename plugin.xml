<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-mlkit-barcode-scanner"
        version="2.1.2-gms"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>cordova-plugin-mlkit-barcode-scanner</name>

  <!-- JS entry: keep your actual file name -->
  <js-module name="cordova-plugin-ml-kit-barcode-scanner" src="www/main.js">
    <clobbers target="cordova.plugins.mlkit.barcodeScanner"/>
  </js-module>

  <engines>
    <engine name="cordova" version=">=7.1.0"/>
    <engine name="cordova-android" version=">=8.0.0"/>
    <engine name="cordova-ios" version=">=4.5.0"/>
  </engines>

  <!-- iOS (unchanged) -->
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="cordova-plugin-mlkit-barcode-scanner">
        <param name="ios-package" value="CDViOSScanner"/>
      </feature>
    </config-file>

    <framework src="Foundation.framework"/>
    <framework src="AVFoundation.framework"/>
    <framework src="UIKit.framework"/>

    <podspec>
      <config>
        <source url="https://github.com/CocoaPods/Specs.git"/>
      </config>
      <pods use-frameworks="true">
        <pod name="GoogleMLKit/BarcodeScanning"/>
      </pods>
    </podspec>

    <header-file src="src/ios/CDViOSScanner.h"/>
    <source-file src="src/ios/CDViOSScanner.m"/>
    <header-file src="src/ios/CameraViewController.h"/>
    <source-file src="src/ios/CameraViewController.m"/>
  </platform>

  <!-- ANDROID: switch to Google Code Scanner (no native .so in APK) -->
  <platform name="android">
    <!-- Cordova feature maps to your existing class name -->
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="cordova-plugin-mlkit-barcode-scanner">
        <param name="android-package"
               value="com.mobisys.cordova.plugins.mlkit.barcode.scanner.MLKitBarcodeScanner"/>
      </feature>
    </config-file>

    <!-- Optional: keep CAMERA permission (safe even though Code Scanner doesnâ€™t require it) -->
    <config-file parent="/*" target="AndroidManifest.xml">
      <uses-permission android:name="android.permission.CAMERA" />
    </config-file>

    <!-- IMPORTANT: we no longer declare CaptureActivity or Vision/MLKit meta-data -->
    <!-- so there is NO <activity> and NO com.google.android.gms.vision / mlkit metadata here -->

    <!-- Java entry (keep the name/path exactly as on disk).
         This file should contain the GMS Code Scanner implementation I sent. -->
    <source-file src="src/android/src/MLKitBarcodeScanner.java"
                 target-dir="src/com/mobisys/cordova/plugins/mlkit/barcode/scanner" />

    <!-- Minimal dependencies only -->
    <framework src="androidx.appcompat:appcompat:1.7.0" />
    <framework src="com.google.android.gms:play-services-code-scanner:16.1.0" />

    <!-- REMOVE legacy deps that pulled native libs:
         (do not include any of these)
         com.google.android.gms:play-services-vision
         com.google.mlkit:barcode-scanning
         androidx.camera:* (camera-core/camera2/lifecycle/view)
         com.android.support:*  and constraintlayout
         build-extras.gradle reference
    -->
            <!-- ZXing (pure Java) -->
  <framework src="com.journeyapps:zxing-android-embedded:4.3.0" />
  <framework src="com.google.zxing:core:3.5.3" />
  </platform>
</plugin>
